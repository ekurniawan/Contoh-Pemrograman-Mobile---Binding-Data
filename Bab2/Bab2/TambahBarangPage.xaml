<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bab2.TambahBarangPage" Title="Tambah Barang">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="100" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition Height="30" />
      <RowDefinition Height="30" />
      <RowDefinition Height="30" />
      <RowDefinition Height="30" />
      <RowDefinition Height="30" />
      <RowDefinition Height="30" />
      <RowDefinition Height="30" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <Label Text="Kode Barang :" HorizontalOptions="End" Grid.Column="0" Grid.Row="0" />
    <Entry Placeholder="Kode Barang" HorizontalOptions="StartAndExpand" 
           Grid.Column="1" Grid.Row="0" />

    <Label Text="Nama Barang :" HorizontalOptions="End" Grid.Column="0" Grid.Row="1" />
    <Entry Placeholder="Nama Barang" HorizontalOptions="StartAndExpand"
           Grid.Column="1" Grid.Row="1" />

    <Label Text="Deskripsi :" HorizontalOptions="End" Grid.Column="0" Grid.Row="2" />
    <Editor Placeholder="Deskripsi" HorizontalOptions="StartAndExpand" 
           Grid.Column="1" Grid.Row="2" />

    <Label Text="Jumlah :" HorizontalOptions="End" Grid.Column="0" Grid.Row="3" />
    <Entry Placeholder="Jumlah" HorizontalTextAlignment="End" 
           Keyboard="Numeric" 
           HorizontalOptions="StartAndExpand"
           Grid.Column="1" Grid.Row="3" />

    <Label Text="Harga Beli :" HorizontalOptions="End" Grid.Column="0" Grid.Row="4" />
    <Entry Placeholder="Harga Beli" HorizontalTextAlignment="End"
           Keyboard="Numeric"
           HorizontalOptions="StartAndExpand"
           Grid.Column="1" Grid.Row="4" />

    <Label Text="Harga Jual :" HorizontalOptions="End" Grid.Column="0" Grid.Row="5" />
    <Entry Placeholder="Harga Beli" HorizontalTextAlignment="End"
           Keyboard="Numeric"
           HorizontalOptions="StartAndExpand"
           Grid.Column="1" Grid.Row="5" />


    <Button Text="Tambah" x:Name="btnTambah" Grid.Column="1" Grid.Row="6" />
    
  </Grid>
</ContentPage> 